{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs" : true,
    "module": "commonjs",
    "target": "es6",
    "types": [],
    "lib" : [
        "es6"
    ],

    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths" : {
        "@*" : ["./"]
    }
  },
  "include" : [
    "src"
  ]
}

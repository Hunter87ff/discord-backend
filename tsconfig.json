{
    "compilerOptions": {
        "target": "es2024",
        "module": "commonjs",
        "lib": [
            "es2024"
        ],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@*": [
                "./*"
            ]
        }
    }
}